@model Mission06_Michaelson.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="container">
    <h2>Add Movie</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Title:</label>
            <input type="text" class="form-control" asp-for="Title" required>
        </div>
        <div class="form-group">
            <label>Category:</label>
            <input type="text" class="form-control" asp-for="Category" required>
        </div>
        <div class="form-group">
            <label>Year:</label>
            <input type="text" class="form-control" asp-for="Year" required>
        </div>
        <div class="form-group">
            <label>Director:</label>
            <input type="text" class="form-control" asp-for="Director" required>
        </div>
        <div class="form-group">
            <label>Rating:</label>
            <input type="text" class="form-control" asp-for="Rating" required>
        </div>
        <div class="form-group">
            <label>Edited:</label>
            <input type="checkbox" class="form-check-input" asp-for="Edited">
        </div>
        <div class="form-group">
            <label>Lent To:</label>
            <input type="text" class="form-control" asp-for="LentTo">
        </div>
        <div class="form-group">
            <label>Notes:</label>
            <textarea class="form-control" asp-for="Notes"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Movie</button>
    </form>
</div>
